{% block _course_videos_widget %}
	<p>Ici, vous pouvez ajouter vos videos !</p>

	{{form_widget(form)}}

	<input type="hidden" id="widgets-counter" value="0">


	<div class="form-group">
		<button type="button" id="add-video" class="btn btn-secondary">Ajouter une video</button>
	</div>


{% endblock %}

{% block _course_videos_entry_row %}
	{{form_widget(form)}}
{% endblock %}


{% block _course_videos_entry_widget %}

	<div class="form-group" id="block_{{id}}">
		{{ form_errors(form) }}

		<div class="row d-flex align-items-end">

			<div class="col-10">
				<div class="row d-flex align-items-end">
					<div class="col d-flex">
						{{form_widget(form.iframe)}}
						{{ form_errors(form.iframe) }}

					</div>
					<div class="col d-flex">
						{{form_widget(form.title)}}
						{{ form_errors(form.title) }}

					</div>
				</div>
			</div>


			<div class="col-2">
				<button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-danger">
					<i class="fas fa-trash"></i>
				</button>
			</div>


		</div>


	</div>


{% endblock %}
