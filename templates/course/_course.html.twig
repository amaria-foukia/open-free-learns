{% set url = path('courses_show', {'slug': course.slug} )%}

<div class="col-md-3"><br>

	<div class="card bg-light mb-3" style="max-width: 20rem;">

		<a href="{{ url }}">
			<img src="{{course.coverImage}}" style="height: 180px; width: 100%; display: block;" alt="card image"/>
		</a>

		<div class="card-body">

			<h6 class="card-title text-center">
				{{course.title}}
			</h6>
			<a href="{{ url }}" class="btn btn-outline-primary btn-sm btn-block rounded d-flex justify-content-between align-items-center">Voir la réponse
				<i class="fas fa-eye fa-lg"></i>
			</a>

			{% if app.user and app.user == course.author %}
				<a href=" {{ path('courses_edit', {'slug' : course.slug } ) }}" class=" btn btn-outline btn-sm btn-block">Modifier mon cours</a>
				<a href="{{ path('courses_delete', {'slug': course.slug})}}" class="btn btn-outline-danger btn-sm btn-block" onclick="return confirm(`Êtes vous sur de vouloir supprimer l'annonce : {{course.title}} ?`)">Supprimer mon cours</a>
			{% endif %}

		</div>

		<div class="card-footer text-center">

			{% if course.comments|length > 0 %}
				{% include 'partials/rating.html.twig' with {'rating': course.avgRatings} %}
			{% else %}
				<small>Pas encore noté</small>
			{% endif %}

		</div>


	</div>
</div>
