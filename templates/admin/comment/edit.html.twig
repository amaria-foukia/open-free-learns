{% extends 'admin/base.html.twig' %}

{% block title %}Modification du commentaire n°
	{{comment.id}}
{% endblock %}


{% block body %}

	<div class="container">
		<h1 class="my-5">Modification du commentaire n°
			{{comment.id}}</h1>

		<div class="bg-light rounded mb-3 py-3 px-3" style="background-color: #E9ECEF!important;">


			<strong>Annonce liée :
			</strong>
			{{comment.course.title}}<br>
			<strong>Auteur :
			</strong>
			{{comment.authorComment.fullName}}<br>
			<strong>Date de création :
			</strong>
			{{comment.createdAt|date('d/m/Y H:i')}}
			<br>
			<strong>Note donnée :
			</strong>
			{{comment.rating}}
		</div>

		{{ form_start(form) }}

		{{ form_widget(form) }}

		<button type="submit" class="btn btn-primary">
			<i class="fas fa-check"></i>
			Enregistrer les modifications
		</button>

		{{ form_end(form) }}
	</div>

{% endblock %}
